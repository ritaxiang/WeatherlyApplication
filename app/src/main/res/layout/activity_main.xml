<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/m_gradient_background"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cityFinder"
        android:layout_marginBottom="956dp"
        android:orientation="vertical">


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cityFinder"
        android:layout_width="66dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="573dp"
        android:background="@drawable/ic_baseline_search_24" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@id/bnView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="-1dp"
        app:menu="@menu/bottom_navmenu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/finding">

    </ImageView>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="66dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="570dp"
        android:background="@drawable/star_button"
        android:contentDescription="@string/app_name"
        android:foreground="@drawable/savebutton" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="270dp"
        android:gravity="center"
        android:paddingStart="0dp"
        android:text="Temp"
        android:textColor="#ffffff"
        android:textSize="70sp"
        android:textStyle="bold"
        android:typeface="monospace">

    </TextView>

    <TextView
        android:id="@+id/weatherCondition"
        android:layout_width="785dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cityFinder"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-490dp"
        android:gravity="center"
        android:text="Condition"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:typeface="monospace">

    </TextView>

    <TextView
        android:id="@+id/cityName"
        android:layout_width="785dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="385dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="950dp"
        android:gravity="center"
        android:text="City Name"
        android:textColor="#ffffff"
        android:textSize="45sp"
        android:textStyle="bold"
        android:typeface="monospace">

    </TextView>


</RelativeLayout>